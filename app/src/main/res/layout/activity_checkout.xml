                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center"
                    android:text="Bằng cách đặt đơn hàng, Bạn đã đồng ý với điều khoản sử dụng và bán hàng của Shopki và xác nhận rằng bạn đã đọc Chính sách riêng tư, Thanh toán sẽ được xử lý theo chinh sách riêng tư PIPO"
                    android:textColor="#6C6C6C"
                    android:textSize="11dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/chat_shop"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">
                <TextView
                    android:id="@+id/tvvv"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Tổng:"/>
                <TextView
                    android:textSize="12dp"
                    android:layout_below="@id/tvvv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_qty_item"
                    android:textColor="#000000"
                    android:text="12 00000"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">
                <TextView
                    android:id="@+id/tv_total"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fd8700"
                    android:text="12 00000 "/>
                <TextView
                    android:textSize="18dp"
                    android:layout_below="@id/tv_total"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv"
                    android:textColor="#AA0505"
                    android:text="12 00000"/>


            </RelativeLayout>



        </LinearLayout>


        <Button
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_height="55dp"
            android:id="@+id/btn_checkout"
            android:text="Thanh Toán"
            android:background="@drawable/skip_button" />



    </LinearLayout>
</RelativeLayout>